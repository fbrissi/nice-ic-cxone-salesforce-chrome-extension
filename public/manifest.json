{
  "manifest_version": 2,
  "name": "NiceIC CXone Salesforce Extension",
  "description": "Extens√£o com recursos auxiliares para NiceIC CXone Salesforce",
  "version": "0.0.1.0",
  "author": "Filipe Bojikian Rissi",
  "permissions": [
    "storage",
    "background",
    "notifications"
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "NiceIC CXone Salesforce Extension",
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "24": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "https://*.visual.force.com/apex/inContactAgentConsole*"
      ],
      "js": [
        "browser-polyfill.js",
        "content-ic.js"
      ]
    },
    {
      "all_frames": true,
      "matches": [
        "https://*.my.salesforce.com/500*"
      ],
      "js": [
        "browser-polyfill.js",
        "content-sf.js"
      ]
    }
  ]
}
